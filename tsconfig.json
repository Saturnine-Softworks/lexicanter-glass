{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "../lexicanter-glass",
    "types": ["svelte", "node"],
    "module": "ESNext",
    "target": "ESNext",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "lib": [
      "DOM",
      "ESNext"
    ]
  },
  "include": [
    "../lexicanter-glass/**/*.ts"
  ]
}
